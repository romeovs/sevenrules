{
  "name": "@romeovs/sevenrules",
  "version": "1.3.0",
  "description": "Git commit message validator",
  "homepage": "https://github.com/romeovs/sevenrules",
  "bugs": "https://github.com/severnway/romeovs/issues",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/lib.js",
  "authors": [
    "Romeo Van Snick <romeovs@gmail.com>"
  ],
  "bin": {
    "sevenrules": "bin/husky.js"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romeovs/sevenrules.git"
  },
  "scripts": {
    "docs": "jsdoc -c .jsdoc.json",
    "lint": "standard --verbose | snazzy",
    "test": "ava --verbose lib/**/*_test.js",
    "build": "rollup -c"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./bin/husky.js"
    }
  },
  "devDependencies": {
    "ava": "0",
    "husky": "^4.2.1",
    "jsdoc": "3",
    "mock-require": "2",
    "rollup": "^1.30.1",
    "sinon": "4",
    "snazzy": "7",
    "standard": "10"
  }
}
