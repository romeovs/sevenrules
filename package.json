{
  "name": "@romeovs/sevenrules",
  "version": "1.2.0",
  "description": "Git commit message validator",
  "homepage": "https://github.com/romeovs/sevenrules",
  "bugs": "https://github.com/severnway/romeovs/issues",
  "license": "SEE LICENSE IN LICENSE",
  "main": "lib/index",
  "authors": [
    "Romeo Van Snick <romeovs@gmail.com>"
  ],
  "bin": {
    "sevenruleshusky": "bin/husky.js"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romeovs/sevenrules.git"
  },
  "scripts": {
    "ava": "ava --verbose",
    "doc": "npm-run-all docjs",
    "docjs": "jsdoc -c .jsdoc.json",
    "full": "npm-run-all lint doc localtest",
    "lint": "npm-run-all lintjs",
    "lintjs": "standard --verbose | snazzy",
    "localtest": "npm-run-all unittest",
    "test": "npm run localtest",
    "unittest": "npm-run-all unittestjs",
    "unittestjs": "ava --verbose test/unit"
  },
  "devDependencies": {
    "ava": "0",
    "husky": "beta",
    "jsdoc": "3",
    "mock-require": "2",
    "npm-run-all": "4",
    "sinon": "4",
    "snazzy": "7",
    "standard": "10"
  }
}
